<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <display-name>cl.net</display-name>
        <listener>
        <listener-class>
                com.sun.xml.ws.transport.http.servlet.WSServletContextListener
        </listener-class>
    </listener>
    <servlet>
        <servlet-name>WS</servlet-name>
        <servlet-class>
        	com.sun.xml.ws.transport.http.servlet.WSServlet
        </servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>WS</servlet-name>
        <url-pattern>/WS</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>http</servlet-name>
        <servlet-class>cl.net.servlet.HttpClientServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>http</servlet-name>
        <url-pattern>/http</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ping</servlet-name>
        <servlet-class>cl.net.servlet.PingServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ping</servlet-name>
        <url-pattern>/ping</url-pattern>
    </servlet-mapping>    
    <servlet>
        <servlet-name>smb</servlet-name>
        <servlet-class>cl.net.servlet.SMBServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>smb</servlet-name>
        <url-pattern>/smb</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ftp</servlet-name>
        <servlet-class>cl.net.servlet.FTPServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ftp</servlet-name>
        <url-pattern>/ftp</url-pattern>
    </servlet-mapping>   
    
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
        </welcome-file-list>
    </web-app>
